<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/red"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/headImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_margin="3dp"
            android:src="@mipmap/welcome_nomal"
            />
        <TextView
            android:id="@+id/headTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/hometitle"
            android:textSize="22sp"
            android:drawableRight="@mipmap/main_title_right"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/headMore"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:src="@mipmap/jiahao"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/headTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />
        <ImageView
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/headMore"
            android:id="@+id/headLingdang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/home_lingdang"
            />
    </RelativeLayout>